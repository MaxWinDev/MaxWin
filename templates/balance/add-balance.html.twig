{# templates/account/add-balance.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/add-balance.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% include 'header.html.twig' with {'user': user} %}
    <div class="main-div">
        <div class="center-div">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.amount) }}
                </div>
                <div class="form-group">
                    <label for="currency">Currency</label>
                    <select id="currency" name="currency" class="currency-input">
                        <option value="EUR">EUR</option>
                        <option value="USD">USD</option>
                        <option value="GBP">GBP</option>
                    </select>
                </div>
                <button type="submit">Add Balance</button>
            {{ form_end(form) }}

            {% if error %}
                <p class="error-message" srtyle="color: red;">{{ error }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
